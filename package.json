{
    "name": "micropython-minimal",
    "version": "0.0.1",
    "publisher": "Pawe≈Ç Bura",
    "engines": {
        "vscode": "^1.89.0"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.micropythonRUN",
                "title": "RUN current micropython file in terminal",
                "icon": {
                    "light": "media/light/micropython-minimal-run-light.svg",
                    "dark": "media/dark/micropython-minimal-run-dark.svg"
                }
            },
            {
                "command": "extension.micropythonREPL",
                "title": "Connect and open Micropython REPL in terminal",
                "icon": {
                    "light": "media/light/micropython-minimal-repl-light.svg",
                    "dark": "media/dark/micropython-minimal-repl-dark.svg"
                }
            },
            {
                "command": "extension.micropythonSEND",
                "title": "SEND current micropython file to device.",
                "icon": {
                    "light": "media/light/micropython-minimal-send-light.svg",
                    "dark": "media/dark/micropython-minimal-send-dark.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == python",
                    "command": "extension.micropythonRUN",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == python",
                    "command": "extension.micropythonREPL",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == python",
                    "command": "extension.micropythonSEND",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == python",
                    "command": "extension.dropdown",
                    "group": "navigation",
                    "title": "Moje Polecenia",
                    "submenu": "micropython-minimal.submenu"
                }
            ],
            "editor/title/context": [
                {
                    "command": "extension.micropythonRUN",
                    "when": "resourceLangId == python"
                },
                {
                    "command": "extension.micropythonREPL",
                    "when": "resourceLangId == python"
                },
                {
                    "command": "extension.micropythonSEND",
                    "when": "resourceLangId == python"
                }
            ],
            "commandPalette": [
                {
                    "command": "extension.micropythonRUN",
                    "when": "editorTextFocus"
                },
                {
                    "command": "extension.micropythonREPL",
                    "when": "editorTextFocus"
                },
                {
                    "command": "extension.micropythonSEND",
                    "when": "editorTextFocus"
                }
            ]
        },
        "submenus": [
            {
                "id": "micropython-minimal.submenu",
                "label": "micropython-minimal",
                "commands": [
                    "extension.micropythonRUN",
                    "extension.micropythonREPL",
                    "extension.micropythonSEND"
                ]
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.12.11",
        "@types/vscode": "^1.89.0",
        "typescript": "^4.9.5"
    },
    "description": "Minimal VSCode plugin to handle micropython. Just 3 functions (RUN, REPL, SEND, as buttons on editor tittle bar. Plugin uses mpremote tool, see ",
    "keywords": [],
    "author": "",
    "license": "ISC"
}